<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMyDark1</item>
        <item name="colorPrimaryDark">@color/colorMyDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DbTvProperty">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@color/colorMyDark1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorMyWhite1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainBtnProperty">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">470dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorMyDark1</item>
    </style>

    <style name="LoginEtProperty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorMyDark1</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="LoginBtnProperty">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">200dp</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="MemberEtProperty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="OptionBtn1Property">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">onClick</item>
        <item name="android:text">@string/operate_time</item>
        <item name="android:textColor">@color/colorMyDark1</item>
    </style>

    <style name="OptionBtn2Property" parent="OptionBtn1Property">
        <item name="android:layout_width">150dp</item>
        <item name="android:text">@string/guide_voice</item>
    </style>

    <style name="OptionBtn3Property" parent="OptionBtn1Property">
        <item name="android:layout_width">150dp</item>
        <item name="android:text">@string/run_voice</item>
    </style>

    <style name="OptionRlProperty">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="OptionBtn4Property" parent="MainBtnProperty">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
